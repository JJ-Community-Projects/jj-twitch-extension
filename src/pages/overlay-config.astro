---
import {OverlayConfigRoot} from "../components/config/overlay/OverlayConfigRoot";
import OverlayLayout from "../layouts/OverlayLayout.astro";
---
<style>

    .schedule-controls-link {
        @apply hover:border-accent-500 hover:bg-accent-500 flex flex-1 flex-col items-center justify-center p-1 transition-all hover:scale-110 hover:text-white;
    }

    .tooltip {
        @apply invisible absolute;
    }

    .has-tooltip:hover .tooltip {
        @apply visible z-50;
    }

</style>
<OverlayLayout
  title="Jingle Jam Twitch Overlay Config"
>
    <OverlayConfigRoot client:only="solid-js"/>
</OverlayLayout>
