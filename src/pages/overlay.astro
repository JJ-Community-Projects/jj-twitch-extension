---
import {OverlayRoot} from '../components/overlay/OverlayRoot.tsx'
import Layout from "../layouts/Layout.astro";
---
<style is:global>

    .schedule-controls-link {
        @apply hover:border-accent-500 hover:bg-accent-500 flex flex-1 flex-col items-center justify-center p-1 transition-all hover:scale-110 hover:text-white;
    }

    .tooltip {
        @apply invisible absolute;
    }

    .has-tooltip:hover .tooltip {
        @apply visible z-50;
    }

    :root {
        --twitch-vertical-padding: 5rem;
        --twitch-right-padding: 7rem;
        --twitch-left-padding: 0rem;
    }

    body {
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        padding: var(--twitch-vertical-padding) var(--twitch-right-padding) var(--twitch-vertical-padding) var(--twitch-left-padding);
    }

    .progress-bar {
        width: 0; /* Start with 0% width */
        height: 100%; /* Full height of the container */
        background-color: #BED9ED; /* Solid color for the progress bar */
        animation: fillProgress 11s linear forwards; /* Animate width over 10 seconds */
        border-radius: 16px; /* Match the rounded corners of the container */
        z-index: 1; /* Place behind the content */
    }

    @keyframes fillProgress {
        from {
            width: 0; /* Start at 0% width */
        }
        to {
            width: 100%; /* End at 100% width */
        }
    }

</style>
<Layout>
    <OverlayRoot client:only="solid-js"/>
</Layout>
